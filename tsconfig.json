{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@moefe/vue-audio/*": ["packages/@moefe/vue-audio/*"],
      "@moefe/vue-store/*": ["packages/@moefe/vue-store/*"],
      "@moefe/vue-touch/*": ["packages/@moefe/vue-touch/*"],
      "@moefe/vue-aplayer/*": ["packages/@moefe/vue-aplayer/*"],
      "@moefe/color-thief": ["packages/@moefe/color-thief/index.d.ts"],
      "@moefe/vue-audio": ["packages/@moefe/vue-audio/index.ts"],
      "@moefe/vue-store": ["packages/@moefe/vue-store/index.ts"],
      "@moefe/vue-touch": ["packages/@moefe/vue-touch/index.tsx"],
      "@moefe/vue-aplayer": ["packages/@moefe/vue-aplayer/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts",
    "example/**/*.ts",
    "example/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "node_modules/@types/",
    "node_modules/vue-tsx-support/enable-check.d.ts"
  ]
}
