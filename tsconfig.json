{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "utils/*": ["src/utils/*"],
      "@moefe/vue-audio/*": ["src/packages/@moefe/vue-audio/*"],
      "@moefe/vue-aplayer/*": ["src/packages/@moefe/vue-aplayer/*"],
      "@moefe/vue-audio": ["src/packages/@moefe/vue-audio/index.ts"],
      "@moefe/vue-aplayer": ["src/packages/@moefe/vue-aplayer/index.ts"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts",
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "node_modules/vue-tsx-support/options/allow-unknown-props.d.ts"
  ]
}
